<div class="flex flex-col gap-2">
  <a
    href="{{url "https://register.smofconlisbon.org/members/register"}}"
    target="_blank"
    class="group card bg-white rounded-lg shadow-md p-8 flex flex-col items-center text-center justify-between hover:shadow-lg transition-shadow"
  >
    <p class="text-6xl mb-4">
      {{price}}
    </p>
    <p class="text-xl mb-2 flex items-baseline gap-2">
      {{label}}
      {{#if info}}
        <span class="relative group/info hidden [@media(pointer:fine)]:inline">
          <span
            tabindex="0"
            aria-label="{{info}}"
            class="inline-flex items-center justify-center w-5 h-5 bg-gray-300 text-gray-600 rounded-full text-xs font-bold cursor-help focus:outline-none focus:ring-2 focus:ring-teal-500 -translate-y-1"
          >
            i
          </span>
          <span
            class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 px-3 py-2 bg-gray-800 text-white text-sm rounded-md whitespace-normal w-48 text-center opacity-0 invisible group-hover/info:opacity-100 group-hover/info:visible group-focus-within/info:opacity-100 group-focus-within/info:visible transition-opacity z-10"
          >
            {{info}}
            <span
              class="absolute left-1/2 -translate-x-1/2 top-full border-4 border-transparent border-t-gray-800"
            ></span>
          </span>
        </span>
      {{/if}}
    </p>
    <div class="flex flex-wrap gap-2 mb-6 justify-center">
      {{#if in_person}}
        <span
          class="bg-orange-200 text-orange-700 px-3 py-1 rounded-full text-sm"
        >
          In Person
        </span>
      {{/if}}
      {{#if online}}
        <span class="bg-sky-200 text-sky-700 px-3 py-1 rounded-full text-sm">
          Online
        </span>
      {{/if}}
      {{#if social_only}}
        <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-sm">
          Social Only
        </span>
      {{/if}}
    </div>
    <span
      class="bg-teal-600 px-6 py-2 rounded-md text-white group-hover:bg-teal-700 w-full transition-colors font-bold"
    >
      Join
    </span>
  </a>
  {{#if info}}
    <p class="text-sm text-gray-600 [@media(pointer:fine)]:hidden">
      {{info}}
    </p>
  {{/if}}
</div>